<%- include("../partials/header") %>
<div class="container">
	<h1 class="text-center p-2">
	Edit <%=campaign.name%>
</h1>

<form  action="/shownew/<%=campaign._id %>?_method=put" method="post">
	<div style="width:300px;margin:0 auto">
		<div class="form-group">
			<input class="form-control" type="text" name="campaign[name]" value="<%=campaign.name%>" >
		</div>
		<div class="form-group">
			<input class="form-control" type="url" name="campaign[img]" value="<%=campaign.img%>">
		</div>
			<div class="form-group">
			<input class="form-control" type="text" name="campaign[discription]" value="<%=campaign.discription%>">
		</div>
	<div class="form-group">
		<button class="btn btn-primary btn-sm">
		submit
	</button>
		<button class="btn btn-default btn-sm">
			<a href="/campgrounds">Back</a>
		</button>
		</div>
</div>
	
</form>
	
</div>


<%- include("../partials/footer") %>